RewriteEngine On
RewriteCond %{HTTP_HOST} ^gatonegro.sclnt\.cl [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://gatonegro.sclnt.cl/$1 [R,L]

RewriteCond %{HTTPS_HOST} ^(.*).gatonegro.sclnt.cl [NC]
RewriteCond %{DOCUMENT_ROOT}/%1/ -d
RewriteCond %1::%{REQUEST_URI} !^(.*?)::/1/?
RewriteRule "^(.*)$" "%{DOCUMENT_ROOT}/%1/$1" [L]

